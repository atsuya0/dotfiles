# i3 config file

#altならMod1.superならMod4
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:IPAGothic Regular 0

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

default_border pixel 1
default_floating_border pixel 1
hide_edge_borders smart
workspace_auto_back_and_forth yes
focus_on_window_activation smart
focus_follows_mouse yes
mouse_warping output
popup_during_fullscreen smart
# focus_wrapping no
show_marks yes

# kill focused window
bindsym $mod+Shift+q kill

#bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+d exec --no-startup-id rofi -show

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# focus the parent container
bindsym $mod+p focus parent
# focus the child container
bindsym $mod+c focus child

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+v split horizontal
# split in vertical orientation
bindsym $mod+s split vertical

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
#bindsym $mod+q layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout splith
bindsym $mod+g layout splitv

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# move the currently focused window to the scratchpad
bindsym $mod+n move scratchpad
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+m scratchpad show

#change workspace
bindsym $mod+i workspace next
bindsym $mod+u workspace prev
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
# move focused container to workspace
bindsym $mod+Shift+u move container to workspace next
bindsym $mod+Shift+i move container to workspace prev
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+w reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id \
"i3-nagbar -t warning -m 'i3' \
-b 'Logout' 'i3-msg exit' \
-b 'Reboot' 'systemctl reboot' \
-b 'Poweroff' 'systemctl poweroff' \
-f 'pango:IPAGothic Regular 10'"

#音量調整
bindsym F8 exec --no-startup-id ${DOTFILES}/i3/volume.sh down
bindsym F9 exec --no-startup-id ${DOTFILES}/i3/volume.sh up
bindsym F10 exec --no-startup-id ${DOTFILES}/i3/volume.sh mute
#XF86AudioLowerVolume
#XF86AudioRaiseVolume
#XF86AudioMute

#輝度調整
bindsym F6 exec --no-startup-id \
  [[ $(xbacklight -get | cut -d. -f1) -gt 9 ]] && xbacklight -dec 10 && pkill -SIGRTMIN+2 i3blocks
bindsym F7 exec --no-startup-id \
  xbacklight -inc 10 && pkill -SIGRTMIN+2 i3blocks
#XF86MonBrightnessUp
#XF86MonBrightnessDown

#画面ロック
bindsym $mod+Shift+Control+l exec i3lock -c 6b91aa

#スクリーンショット
bindsym Print exec --no-startup-id scrot -q 100 -u '%Y-%m-%d_%H:%M:%S.png' -e '[[ -d ~/Content/pictures/screenshot/ ]] && mv $f ~/Content/pictures/screenshot/'
bindsym Shift+Print exec --no-startup-id scrot -q 100 '%Y-%m-%d_%H:%M:%S.png' -e '[[ -d ~/Content/pictures/screenshot/ ]] && mv $f ~/Content/pictures/screenshot/'

# resize window (you can also use the mouse for that)
set $mode_resize 
mode "$mode_resize" {
    # These bindings trigger as soon as you enter the resize mode
    bindsym Shift+comma resize shrink width 10 px or 10 ppt
    bindsym Shift+period resize grow width 10 px or 10 ppt
    bindsym minus resize shrink height 10 px or 10 ppt
    bindsym Shift+semicolon resize grow height 10 px or 10 ppt

    # back to normal: Enter or Escape or space
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym space mode "default"
}
bindsym $mod+r mode "$mode_resize"

set $mode_launcher 
mode "$mode_launcher" {
    bindsym t exec --no-startup-id alacritty, mode "default"
    bindsym Shift+t exec --no-startup-id termite, mode "default"
    bindsym b exec --no-startup-id chromium, mode "default"
    bindsym f exec --no-startup-id pcmanfm, mode "default"
    bindsym w exec --no-startup-id webstorm, mode "default"
    bindsym v exec --no-startup-id virtualbox, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym space mode "default"
}
bindsym $mod+Return mode "$mode_launcher"

set $mode_display xrandr
mode "$mode_display" {
    bindsym m exec --no-startup-id xrandr --output eDP1 --output HDMI1 --mode 1366x768, mode "default"
    bindsym d exec --no-startup-id xrandr --output HDMI1 --left-of eDP1 --mode 1366x768, mode "default"
    bindsym x exec --no-startup-id xrandr --output HDMI1 --off, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym space mode "default"
}
bindsym $mod+x mode "$mode_display"

set $background #2b303b
set $foreground #c0c5ce
set $black #2b303b
set $red #bf616a
set $green #a3be8c
set $yellow #ebcb8b
set $blue #8fa1b3
set $magenta #b48ead
set $cyan #96b5b4
set $white #c0c5ce

bar {
    status_command i3blocks
    #status_command i3status

    font pango:FontAwesome, IPAGothic Regular 11

    mode dock
    position top
    separator_symbol " │ "
    workspace_buttons yes
    strip_workspace_numbers yes
    binding_mode_indicator yes
    tray_output none
    tray_padding 0
    colors {
        #背景の色
        background $background
        focused_background $background
        #文字の色
        statusline $blue
        focused_statusline $blue
        #区切り文字の色
        separator $blue
        focused_separator $blue
        #workspaceのbottanの色

        # border bg fg
        focused_workspace  $blue $blue $background
        active_workspace $background $background $foreground
        inactive_workspace $background $background $foreground
        urgent_workspace   $red $red $background
        #modeの色
        binding_mode       $blue $blue $background
    }

}
