[uptime]
label=UT
command=uptime | sed 's/.*up \([^,]*\),.*/\1/'
color=#d0dcef
interval=1

[lightness]
label=â˜€
command=xbacklight -get | xargs printf '%.0f%%'
color=#d0dcef
interval=once
signal=2

[memory]
label=Mem
command=free -h | awk 'match($0, /^Mem/){print $3 " / " $2}'
color=#d0dcef
interval=1

[load average]
label=LA
command=echo "$(uptime | sed 's/.*load average: \(.*\)/\1/' | cut -d, -f1) / $(cat /proc/cpuinfo | grep processor | wc -l)"
color=#d0dcef
interval=1

[network]
label=ðŸ“¶
command=[[ $(iw dev wlp4s0 link) != 'Not connected.' ]] && echo "$(iw dev wlp4s0 link | sed '/SSID/!d;s/ //g;s/[^:]*://') / -$(iw dev wlp4s0 link | grep signal | grep -o '[0-9]*')dBm"
color=#d0dcef
interval=1

[volume]
label=ðŸ”Š
command=~/.config/i3blocks/volume.sh
interval=1
signal=1

[date]
label=ðŸ•”
command=date +'%m/%d %H:%M'
color=#d0dcef
interval=1

[battery]
label=ðŸ”‹
command=~/.config/i3blocks/battery.sh
interval=1
